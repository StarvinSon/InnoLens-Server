{
  "name": "innolens-server",
  "version": "0.1.0",
  "homepage": "https://i.cs.hku.hk/fyp/2019/fyp19027/",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/StarvinSon/innolens-server.git"
  },
  "engines": {
    "node": ">=12.12.0"
  },
  "scripts": {
    "lint": "eslint --config .eslintrc.js --ext .ts src",
    "build": "tsc --project tsconfig.json",
    "build:watch": "tsc --project tsconfig.json --watch",
    "start": "pm2 start ecosystem.config.js --only innolens-server",
    "start:debug": "pm2 kill && pm2 start ecosystem.config.js --no-daemon --only innolens-server-debug",
    "restart": "pm2 restart ecosystem.config.js --only innolens-server"
  },
  "dependencies": {
    "koa": "^2.10.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "winston": "^3.2.1",
    "yargs": "^14.2.0"
  },
  "devDependencies": {
    "@types/koa": "^2.0.50",
    "@types/koa-router": "^7.0.42",
    "@types/koa-static": "^4.0.1",
    "@types/node": "^12.7.12",
    "@types/yargs": "^13.0.3",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "typescript": "^3.6.4"
  }
}
